@model TheBedstand.Web.InputModels.Books.BookInputModel
@using TheBedstand.Common.Helpers
@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="Books" asp-action="Edit" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="Title">Book Title</label>
        <input asp-for="Title" type="text" class="form-control w-50" id="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PublishedOn">Date of Publishing</label>
        <input asp-for="PublishedOn" type="date" class="form-control w-50" id="PublishedOn" />
        <span asp-validation-for="PublishedOn" class="text-danger"></span>
    </div>

    <div class="form-group" hidden>
        <label for="ISBN">ISBN</label>
        <input asp-for="ISBN" type="text" class="form-control w-50" id="ISBN"/>
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PageCount">Page Count</label>
        <input asp-for="PageCount" type="number" class="form-control w-50" id="PageCount" />
        <span asp-validation-for="PageCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Annotation">Annotation</label>
        <textarea asp-for="Annotation" id="Annotation" class="form-control"> </textarea>
        <span asp-validation-for="Annotation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cover" class="upload-btn">
            <i class="fa fa-upload"></i> Upload
            <input asp-for="Cover" type="file" />
        </label>
        <span asp-validation-for="Cover" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="text-dark">Author</label>
        <select asp-for="AuthorId" asp-items="@(Model.AuthorsForSelectList.Select(x => new SelectListItem { Text = NameHelper.GetFullName(x.PersonalName,x.Surname), Value = x.Id.ToString()}));">
            <option selected="selected" value="">Please select</option>
        </select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="text-dark">Genres</label>
        <select asp-for="GenreIds" asp-items="@(Model.GenresForSelectList.Select(x => new SelectListItem { Text = x.Name, Value = x.Id.ToString() }));">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>

    <button class="btn-primary btn" type="submit">Edit</button>
</form>
