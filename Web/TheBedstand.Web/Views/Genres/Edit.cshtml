@model TheBedstand.Web.InputModels.Genres.CreateGenreInputModel

@if (this.TempData["ImageUploadError"] != null)
{
    <div class="alert alert-warning my-2" role="alert">
        @this.TempData["ImageUploadError"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
    

<form asp-controller="Genres" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name" class="text-dark">Genre Name</label>
        <input asp-for="Name" class="form-control w-25" type="text" id="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description" class="text-dark">Description</label>
        <textarea asp-for="Description" class="form-control" type="text" placeholder="Enter the genres description here..." id="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="upload-btn">
            <i class="fa fa-upload"></i> Upload
            <input asp-for="Image" type="file" />
        </label>
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div> <input asp-for="Id" type="number" style="display:none"/></div>

    <button class="btn-primary btn" type="submit">Edit</button>
</form>
